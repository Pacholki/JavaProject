<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pacholki.controller.page.team.InfoPageController">
   <center>
      <HBox>
         <children>
            <VBox prefWidth="700.0" prefHeight="800.0">
               <ImageView fx:id="teamImage" fitHeight="350.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
               <Label fx:id="teamNameText" prefHeight="56.0" prefWidth="600.0" styleClass="playerInfo" />
               <Label fx:id="leagueText" prefHeight="56.0" prefWidth="600.0" styleClass="playerInfo" />
               <Label fx:id="pointsText" prefHeight="56.0" prefWidth="600.0" styleClass="playerInfo" />
               <Label fx:id="bilansText" prefHeight="56.0" prefWidth="600.0" styleClass="playerInfo" />
               <Label fx:id="playersCountText" prefHeight="56.0" prefWidth="600.0" styleClass="playerInfo" />
            </VBox>
            <TableView fx:id="teamFixtures" prefHeight="800.0" prefWidth="450.0" BorderPane.alignment="CENTER" />
         </children>
      </HBox>
   </center>
</BorderPane>
