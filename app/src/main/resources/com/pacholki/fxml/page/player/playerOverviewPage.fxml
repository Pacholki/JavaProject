<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pacholki.controller.page.player.PlayerOverviewPageController">
   <top>
      <HBox fx:id="playerOverview" prefHeight="288.0" prefWidth="682.0" BorderPane.alignment="CENTER">
         <children>
             <ImageView fx:id="playerImage" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="100.0" />
             <VBox>
                 <Label fx:id="playerNameText" prefHeight="56.0" prefWidth="310.0" styleClass="playerInfo"/>
                 <Label fx:id="teamNameText" prefHeight="56.0" prefWidth="310.0" styleClass="playerInfo"/>
                 <Label fx:id="ageText" prefHeight="56.0" prefWidth="500.0" styleClass="playerInfo"/>
                 <Label fx:id="positionsText" prefHeight="56.0" prefWidth="310.0" styleClass="playerInfo"/>
             </VBox>
         </children>
      </HBox>
   </top>
    <center>
        <HBox fx:id="playerStats" prefHeight="288.0" BorderPane.alignment="CENTER">
            <VBox>
                <Label fx:id="matchesPlayedText" prefHeight="56.0" prefWidth="310.0" styleClass="playerInfo"/>
                <Label fx:id="first11Text" prefHeight="56.0" prefWidth="310.0" styleClass="playerInfo"/>
                <Label fx:id="playTimeMinutes" prefHeight="56.0" prefWidth="310.0" styleClass="playerInfo"/>
            </VBox>
            <VBox>
                <Label fx:id="goalsText" prefHeight="56.0" prefWidth="200.0" styleClass="playerInfo"/>
                <Label fx:id="assistsText" prefHeight="56.0" prefWidth="200.0" styleClass="playerInfo"/>
                </VBox>
            <VBox>
                <Label fx:id="yellowCardsText" prefHeight="56.0" prefWidth="200.0" styleClass="playerInfo"/>
                <Label fx:id="redCardsText" prefHeight="56.0" prefWidth="200.0" styleClass="playerInfo"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
