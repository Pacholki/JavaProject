<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="742.0" prefWidth="877.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pacholki.controllers.LeagueOverviewController">
   <top>
      <HBox fx:id="header" styleClass="header" BorderPane.alignment="CENTER">
         <children>
            <VBox>
               <children>
                  <MFXButton fx:id="chooseLeagueButton" onAction="#handleChooseLeague" text="Choose league" styleClass="selectButton"/>
                  <VBox fx:id="leagueButtonContainer">
                  </VBox>
               </children>
            </VBox>
            <VBox>
               <children>
                  <MFXButton fx:id="chooseSeasonButton" onAction="#handleChooseSeason" text="Choose season" styleClass="selectButton"/>
                  <VBox fx:id="seasonButtonContainer">
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </top>
</BorderPane>
